<Page
    x:Class="MVVMStarter.Views.App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0" >
            <StackPanel Orientation="Horizontal">
                <Button Name="HamburgerButton" 
                    RelativePanel.AlignLeftWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="40" 
                    Content="&#xE700;" 
                    Click="HamburgerButton_Click" />
                <Image Width="100" Height="50" Margin="10,0,0,0"
                       Source="ms-appx:///Assets/App/Logo120x60.jpg"/>
            </StackPanel>
        </RelativePanel>

        <SplitView Grid.Row="1" 
                   Name="AppSplitView"
                   DisplayMode="CompactInline" 
                   OpenPaneLength="256"
                   CompactPaneLength="60">
            <SplitView.Pane>
                <ListBox SelectionMode="Single" SelectionChanged="ListBox_SelectionChanged">
                    <ListBoxItem Name="ImageView">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="40" Height="40" Source="ms-appx:///Assets/App/Image.png"/>
                            <TextBlock FontSize="24" Margin="20,0,0,0">Images</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="CustomerView">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="40" Height="40" Source="ms-appx:///Assets/App/Load.png"/>
                            <TextBlock FontSize="24" Margin="20,0,0,0">Customer</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="CarView">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="40" Height="40" Source="ms-appx:///Assets/App/Load.png"/>
                            <TextBlock FontSize="24" Margin="20,0,0,0">Car</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="SalespersonView">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="40" Height="40" Source="ms-appx:///Assets/App/Load.png"/>
                            <TextBlock FontSize="24" Margin="20,0,0,0">Salesperson</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="Load">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="40" Height="40" Source="ms-appx:///Assets/App/Load.png"/>
                            <TextBlock FontSize="24" Margin="20,0,0,0">Load</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="Save">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="40" Height="40" Source="ms-appx:///Assets/App/Save.png"/>
                            <TextBlock FontSize="24" Margin="20,0,0,0">Save</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="Quit">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="40" Height="40" Source="ms-appx:///Assets/App/Quit.png"/>
                            <TextBlock FontSize="24" Margin="20,0,0,0">Quit</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>

            <SplitView.Content>
                <Frame Name="AppFrame"></Frame>
            </SplitView.Content>

        </SplitView>
    </Grid>
</Page>
